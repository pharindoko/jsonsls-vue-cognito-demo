root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 80

[*.{groovy,java,kt}]
indent_style = space
indent_size = 4

[*.go]
indent_style = tab
indent_size = 4

[*.py]
indent_style = space
indent_size = 4

[*.{js,jsx}]
indent_size = 2
indent_style = space

[*.xml]
indent_style = space
indent_size = 4

[*.html]
indent_size = 2

[*.{yml,yaml,json}]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab
indent_size = 4

[**.min.js]
indent_style = ignore
insert_final_newline = ignore

[*.bat]
indent_style = tab

[*.md]
max_line_length = 0
trim_trailing_whitespace = false

[COMMIT_EDITMSG]
max_line_length = 0